# Container names
MCPO_CONTAINER_NAME=mcpo-server
UI_CONTAINER_NAME=mcpo-ui
WATCHER_CONTAINER_NAME=mcpo-watcher

# Ports
UI_PORT=8501
MCPO_PORT=8000

# Base URL for accessing MCPO from browser (leave empty to use http://localhost:MCPO_PORT)
# Examples: https://mcpo.example.com, http://192.168.1.100:8000
MCPO_BASE_URL=

# API Key for MCPO authentication (required)
MCPO_API_KEY=your-secret-key-here
